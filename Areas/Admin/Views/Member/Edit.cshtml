@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model QLcaulacbosinhvien.Models.Member
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>Tài khoản</h4>

              <div class="row">
                <div class="col-md-12">
                  <ul class="nav nav-pills flex-column flex-md-row mb-3">
                    <li class="nav-item">
                      <a class="nav-link active" href="javascript:void(0);"><i class="bx bx-user me-1"></i> Account</a>
                    </li>
                  </ul>
                  <div class="card mb-4">
                    <h5 class="card-header">Chi tiết tài khoản
                    <!-- Account -->


                    <hr class="my-0">
                    <div class="card-body">
                <form method="POST" asp-action="Edit" asp-controller="Member" >
    <div asp-validation-summary="All"></div>
<div class="d-flex align-items-start align-items-sm-center gap-4">
        
          <div class="mb-3">
                        <label asp-for="Images" class="form-label">Ảnh</label>
                     <img src="~/images/@Model.Images" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                        <input class="form-control" type="file" asp-for="Images" id="formFileMultiple" multiple="">
                        	<span asp-validation-for="Images" class="alert-danger"></span>
                      </div>
    </div>

    <div class="row">
         <input type="text" class="form-control mb-3" asp-for="MemberID" type="hidden" />
        <div class="mb-3 col-md-6">
            <label asp-for="MemberName" class="form-label">Họ và tên</label>
            <input class="form-control" type="text" asp-for="MemberName" required />
        </div>

        <div class="mb-3 col-md-6">
            <label asp-for="MemberEmail" class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="MemberEmail" required />
        </div>

        <div class="mb-3 col-md-6">
            <label asp-for="MemberPhone" class="form-label">SĐT</label>
            <input class="form-control" type="text" asp-for="MemberPhone" required />
        </div>

        <div class="mb-3 col-md-6">
            <label asp-for="MemberMSV" class="form-label">Mã sinh viên</label>
            <input class="form-control" type="text" asp-for="MemberMSV" required />
        </div>

        <div class="mb-3 col-md-6">
            <label asp-for="JoinDate" class="form-label">Thời gian tham gia</label>
            <input type="date" class="form-control" asp-for="JoinDate" />
        </div>

        <div class="mb-3 col-md-6">
            <label asp-for="Point" class="form-label">Điểm rèn luyện</label>
            <input type="text" class="form-control" asp-for="Point" />
        </div>

        <div class="mb-3 col-md-6">
            <label>
                @Html.CheckBox("IsShow", false) Hiển thị
            </label>
        </div>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-lg btn-primary p-2">
            <i class="bi bi-file-plus-fill"></i> Lưu
        </button>
        <a asp-controller="Member" asp-action="Read" class="btn btn-lg btn-warning p-2">Quay lại</a>
    </div>
</form>

                    </div>
                    <!-- /Account -->
                  </div>
                
                </div>
              </div>
            </div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const uploadInput = document.getElementById('formFileMultiple');
        const uploadedAvatar = document.getElementById('uploadedAvatar');

        // Lắng nghe sự kiện thay đổi file
        uploadInput.addEventListener('change', function (event) {
            const file = event.target.files[0]; // Lấy file đầu tiên (nếu có nhiều file)
            if (file && file.type.match('image.*')) { // Kiểm tra xem file có phải là hình ảnh không
                const reader = new FileReader();

                reader.onload = function (e) {
                    // Hiển thị ảnh xem trước
                    uploadedAvatar.src = e.target.result;
                };

                // Đọc file dưới dạng URL
                reader.readAsDataURL(file);
            }
        });
    });
</script>
