@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }
@model IEnumerable<QLcaulacbosinhvien.Models.Article>
<div class="container-xxl flex-grow-1 container-p-y">
<div class="card">
                <h2 class="card-header" 
                style=" display: flex;
                  justify-content: center;
                align-items: center;
                color:blue">Quản lí bài viết</h2>
                <div class="card-body">
            <form method="get" action="Read">
            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate">

            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate">

    <button type="submit">Lọc</button>
</form>

                <a  href="/Admin/Article/Create" class="btn btn-primary">Thêm mới</a>
                   <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tiêu đề</th>
            <th>Hình ảnh</th>
            <th>Ngày đăng</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int currentPage = ViewBag.CurrentPage; 
            int pageSize = 3; 
            int startIndex = (currentPage - 1) * pageSize; 

            foreach (var item in Model)
            {
                int i = ++startIndex;
                <tr id="trow_@i">
                    <th>@i</th>
                    <td>@item.Title</td>
                    <td><img src="~/images/@item.Image" width="80" height="80"></td>
                    <td>@item.Date</td>
                    <td>
                        <div class="form-check form-switch">
                            <input data-id="@item.ArticleID" class="form-check-input toggle-switch" type="checkbox" id="flexSwitchCheckChecked_@item.ArticleID" @(item.IsShow.HasValue && item.IsShow.Value ? "checked" : "")>
                            <label class="form-check-label" for="flexSwitchCheckChecked_@item.ArticleID">
                         
                            </label>
                        </div>
                    </td>
                    <td>
                        <a href="/Admin/Article/Edit/@item.ArticleID" class="btn btn-primary">Sửa</a>
                        <a href="" data-id="@item.ArticleID" class="btn btn-danger btnDelete">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Không có dữ liệu.</td>
            </tr>
        }
    </tbody>
</table>

<div class="demo-inline-spacing">
    <nav aria-label="Page navigation" style="">
       <ul class="pagination justify-content-center">
    
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Read", new { page = 1 })">
                    <i class="tf-icon bx bx-chevrons-left"></i>
                </a>
            </li>
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Read", new { page = ViewBag.CurrentPage - 1 })">
                    <i class="tf-icon bx bx-chevron-left"></i>
                </a>
            </li>

    
          @for (int pageIndex = 1; pageIndex <= ViewBag.TotalPages; pageIndex++)
        {
            <li class="page-item @(ViewBag.CurrentPage == pageIndex ? "active" : "")">
                <a class="page-link" href="/Admin/Article/Read?page=@pageIndex">@pageIndex</a>
            </li>
        }

  
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Read", new { page = ViewBag.CurrentPage + 1 })">
                    <i class="tf-icon bx bx-chevron-right"></i>
                </a>
            </li>

        
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Read", new { page = ViewBag.TotalPages })">
                    <i class="tf-icon bx bx-chevrons-right"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!--/ Basic Pagination -->
</div>

                  </div>
                </div>
              </div>
</div>
    @section scripts2{
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Attach a click event to elements with the class "btnDelete"
            $('body').on('click', '.btnDelete', function () {
                // Prevent the default behavior of the anchor
                var id = $(this).data("id");
                var conf = confirm("Bạn có muốn xóa bản ghi này ?");
                if (conf === true) {

                    // Make an AJAX request to your server to delete the record
                    $.ajax({

                        url: '/admin/Article/Delete', // Replace with your actual URL
                        type: 'POST', // Use POST or DELETE based on your server-side implementation
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }

                    });
                }
            });
        });
        $(document).ready(function () {
            $('.toggle-switch').on('change', function () {
                var id = $(this).data('id');
                var isActive = $(this).prop('checked');

                $.ajax({
                    url: '/Admin/Article/UpdateIsShow', // Replace with your actual URL
                    type: 'POST',
                    data: { id: id, isActive: isActive },
                    success: function (response) {
                        if (response.success) {
                            console.log('Update successful');
                        } else {
                            console.error('Update failed:', response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error updating IsActive:', error);
                    }
                });
            });
        });
    </script>

    }

          