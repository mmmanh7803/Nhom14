@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model QLcaulacbosinhvien.Models.Article

<div class="post-detail">
    <h1>@Model.Title</h1>
    <p><strong>Published on:</strong> @Model.Date.ToString("dd/MM/yyyy")</p>

    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <img src="~/images/@Model.Image" alt="@Model.Title" class="img-fluid">
    }

    <div class="post-content">
        @Html.Raw(Model.Content) <!-- Assuming content includes HTML -->
    </div>
</div>
